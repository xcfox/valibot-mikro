		"@biomejs/biome": "1.5.2",
		"@mikro-orm/better-sqlite": "^6.0.5",
		"@mikro-orm/core": "^6.0.5",
		"@rollup/plugin-swc": "^0.3.0",
		"@types/node": "^20.11.5",
		"nanoid": "^5.0.4",
		"reflect-metadata": "^0.2.1",
		"tsup": "^8.0.1",
		"typescript": "^5.3.3",
		"valibot": "^0.27.0",
		"vite": "^5.0.12",
		"vite-node": "^1.2.1",
		"vitest": "^1.2.1"
	},
	"scripts": {
		"test": "vitest",
		"build": "tsup",
		"check": "biome check --apply ."
	}
