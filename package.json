{
	"name": "valibot-mikro",
	"version": "0.1.0",
	"description": "Defining MikroORM Entities with Valibot",
	"keywords": [
		"valibot",
		"schema",
		"mikro-orm",
		"typescript",
		"orm"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/xcfox/valibot-mikro"
	},
	"author": "xcfox",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
